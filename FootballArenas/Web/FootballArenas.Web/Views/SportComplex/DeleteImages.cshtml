@using FootballArenas.Data.Models.CustomModels
@model FootballArenas.Web.ViewModels.SportComplexViewModels.HomePageSportComplexViewModel

@{
    ViewData["Title"] = "Delete images";
}

<h1 class="text-danger">Select the images you want to delete!</h1>

<form asp-action="DeleteImages">
    <div class="form-group" asp-validation-summary="All"></div>

    <input asp-for="Id" type="hidden" />

    @for (int i = 0; i < Model.ImageList.Count; i++)
    {
        <div>
            <input asp-for="@Model.ImageList[i].Id" type="hidden" />
            <input asp-for="@Model.ImageList[i].Extension" type="hidden" />

            <input asp-for="@Model.ImageList[i].IsDelete" />
            <label for="@Model.ImageList[i].Id"><img class="img-thumbnail" width="220"  src="@Model.ImageList[i].Path" /></label>
        </div>
    }

    <input type="submit" class="btn-info" />
</form>