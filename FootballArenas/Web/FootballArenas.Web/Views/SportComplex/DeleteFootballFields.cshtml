@model FootballArenas.Web.ViewModels.SportComplexViewModels.SportComplexInputViewModel

@{
    ViewData["Title"] = "Edit football fields";
}


@for (int i = 0; i < @Model.FootballFields.Count; i++)
{
    <form asp-controller="SportComplex" asp-action="DeleteFootballFieldsById">
        <div class="p-3 m-3 rounded border border-2 border-primary">
            <input asp-for="@Model.FootballFields[i].Id" type="hidden" />
            <input asp-for="@Model.FootballFields[i].Name"/>
            <div class="form-group">
                <label>Name</label>
                <text class="form-control">@Model.FootballFields[i].Name</text>
            </div>

            <div class="form-group">
                <label>Size</label>
                <text class="form-control">@Model.FootballFields[i].Size</text>
            </div>

            <div class="form-group">
                <label>Recommended number ogf players</label>
                <text class="form-control">@Model.FootballFields[i].RecommendedNumberOfPeople</text>
            </div>

            <input type="submit" />

        </div>
    </form>
}

