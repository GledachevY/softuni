@model FootballArenas.Web.ViewModels.SportComplexViewModels.SportComplexInputViewModel

@{
    ViewData["Title"] = "Edit football fields";
}

<form asp-controller="SportComplex" asp-action="EditFootballField" >
    @for (int i = 0; i < @Model.FootballFields.Count; i++)
    {
        <div class="p-3 m-3 rounded border border-2 border-primary">
            <input asp-for="@Model.FootballFields[i].Id" type="hidden" />

            <div class="form-group">
                <label asp-for="@Model.FootballFields[i].Name"></label>
                <input asp-for="@Model.FootballFields[i].Name" class="form-control">
                <span asp-validation-for="@Model.FootballFields[i].Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.FootballFields[i].Size"></label>
                <input asp-for="@Model.FootballFields[i].Size" class="form-control">
                <span asp-validation-for="@Model.FootballFields[i].Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.FootballFields[i].RecommendedNumberOfPeople"></label>
                <input asp-for="@Model.FootballFields[i].RecommendedNumberOfPeople" class="form-control">
                <span asp-validation-for="@Model.FootballFields[i].RecommendedNumberOfPeople" class="text-danger"></span>
            </div>



        </div>
    }
    <div class="form-group">
        <input type="submit" value="Submit" class="btn-info" />
    </div>
</form>